<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDEB7F"
    tools:context="com.paletec.paletec_llamadas.MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="PALETEC - Vendedores"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        tools:paddingTop="10dp"
        tools:textAlignment="center" />

    <TextView
        android:id="@+id/txt_xavier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Xavier"
        android:textColor="#000000"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/ll_xavier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_xavier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/xavier" />

        <Button
            android:id="@+id/btn_xavier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondeado"
            android:drawableLeft="@drawable/icono_llamada"
            android:gravity="left|center_vertical"
            android:onClick="llamarXavier"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:text="Llamar"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_matutino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="MATUTINO"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/txt_santos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Santos"
        android:textColor="#000000"
        android:textSize="35sp" />


    <LinearLayout
        android:id="@+id/ll_santos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_santos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/santos" />

        <Button
            android:id="@+id/btn_santos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondeado"
            android:onClick="llamarSantos"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/icono_llamada"
            android:gravity="left|center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="Llamar" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_vespertino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="VESPERTINO"
        android:textColor="#000000"
        android:layout_marginBottom="35dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:text=" @paletecmx" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FDEB7F"
            android:layout_marginRight="10dp"
            android:onClick="abrirFacebook"
            app:srcCompat="@drawable/fb" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FDEB7F"
            android:layout_marginRight="10dp"
            android:onClick="abrirInstagram"
            app:srcCompat="@drawable/inst" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FDEB7F"
            android:onClick="abrirTwitter"
            app:srcCompat="@drawable/tw" />

    </LinearLayout>

</LinearLayout>
